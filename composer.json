{
    "name": "zepson/whatsappcloud-php",
    "description": "WhatsApp   Latest CLoud API Wrapper for PHP",
    "keywords": [
        "zepson",
        "Whatsapp cloud Api",
        "Whatsapp cloud",
        "Whatsapp",
        "Whatsapp cloud php",
        "Whatsapp cloud php wrapper"
    ],
    "homepage": "https://github.com/pro-cms/whatsappcloud-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Novath Thomas",
            "email": "novath@zepson.co.tz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^7.4",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "zepson\\Whatsapp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "zepson\\Whatsapp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
